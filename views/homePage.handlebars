
{{> --navBar}}

<article class="main-section">
    <div class="container-fluid">
        <div class="row text-center">
            <div class="page-headers col-md-12 fw-bold fs-1">Fitness Tracker</div>
        </div>

        {{!-- CHARTS --}}
        <div class="row align-items-center justify-content-center pb-2">

            {{> --lastWorkout}}

        </div>
    </div>
</article>

{{!-- TOAST ALERT --}}
<div id="toast-last-workout" class="toast align-items-center border-0 rounded fail" role="alert" aria-live="assertive" aria-atomic="true">
    <div>
        <div id="toast-last-workout-body" class="toast-body">
            <button type="button" class="btn-close btn-close-dark me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body d-flex border-top align-items-center justify-content-center gap-1">
            <button id="btn-goto-viewworkout" type="button" class="btn btn-primary btn-sm" data-id={{workout.id}}>View</button>
            <button id="btn-goto-addexercise" type="button" class="btn btn-success btn-sm" data-id={{workout.id}}>Add</button>
            <button id="btn-goto-updateworkout" type="button" class="btn btn-warning btn-sm" data-id={{workout.id}}>Update</button>
        </div>
    </div>
</div>

<script src='/assets/js/api.js'></script>
<script src='/assets/js/lastworkout.js'></script>